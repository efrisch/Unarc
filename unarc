#!/usr/bin/env bash
# COPYRIGHT (c) 2011 Elliott Frisch
# FREE TO USE. NO WARRANTIES.

function unTarBzip2 {
	if [ ! -f "$1" ]; then
		echo "Cannot open file ($1) in unTarBzip2"
		exit 1
	fi
	if [ "$2" == "1" ]; then
		bzip2 -dc "$1" | tar xvvf -
	else
		bzip2 -dc "$1" | tar xf - > /dev/null 2>&1
	fi
	exit $?
}
function unTarGzip {
	if [ ! -f "$1" ]; then
		echo "Cannot open file ($1) in unTarGzip"
		exit 1
	fi
	if [ "$2" == "1" ]; then
		gzip -dc "$1" | tar xvvf -
	else
		gzip -dc "$1" | tar xf - > /dev/null 2>&1
	fi
	exit $?
}

VERBOSE="1"
FILE="$1"
if [ "$FILE" == "" ]; then
	echo "$0 filename [missing mandatory file]"
	exit 1
fi
if [ ! -f "$FILE" ]; then
	echo "$0 filename [$FILE is missing]"
	exit 1
fi
# $FILE exists! Find its' extension.

EXT1=`echo $FILE | awk -F . '{print $NF}'`
EXT2=`basename $FILE .$EXT1 2>/dev/null| awk -F . '{print $NF}'`

# Check for gzip (or bzip2) tar file.
case "$EXT1" in
	"tbz2" )
		unTarBzip2 "$FILE" "$VERBOSE"
		exit $?
		;;
	"tgz" )
		unTarGzip "$FILE" "$VERBOSE"
		exit $?
		;;
esac
if [ "$EXT2" == "tar" ]; then
	case "$EXT1" in
	"bz2" )
		unTarBzip2 "$FILE" "$VERBOSE"
		exit $?
		;;
	"gz" ) 
		unTarGzip "$FILE" "$VERBOSE"
		exit $?
		;;
	esac
fi

# Try a file type test.
FILETYPE=`file "$FILE" | cut -f2 -d':' | awk '{print tolower($1)}'`
case "$FILETYPE" in
	"xz" )
		if [ "$VERBOSE" == "1" ]; then
			xz -d "$FILE"
		else
			xz -d "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	"lha" )
		if [ "$VERBOSE" == "1" ]; then
			lha xv "$FILE"
		else
			lha xq "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	"7-zip" )
		if [ "$VERBOSE" == "1" ]; then
			7z x "$FILE"
		else
			7z x "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	"zip" )
		if [ "$VERBOSE" == "1" ]; then
			unzip -v "$FILE"
		else
			unzip "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	"bzip2" )
		if [ "$VERBOSE" == "1" ]; then
			bzip2 -d "$FILE" 
		else
			bzip2 -d "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	"gzip" )
		if [ "$VERBOSE" == "1" ]; then
			gzip -d "$FILE" 
		else
			gzip -d "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;	
	"rar" )
		if [ "$VERBOSE" == "1" ]; then
			unrar vx "$FILE"
		else
			unrar x "$FILE" > /dev/null 2>&1
		fi
		exit $?
		;;
	* ) 
		echo "File of type $FILETYPE is not recognized. $FILE not extracted."
		exit 1 ;;
esac
